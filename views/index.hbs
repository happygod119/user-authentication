<div class="card-body">
  <h2 class="card-title text-center">Account Login</h2>
</div>

<div class="row text-center">
  <form>
    <div class="form-floating mb-3 col-auto">
      <input
        type="email"
        class="form-control"
        id="InputEmail1"
        aria-describedby="emailHelp"
        placeholder="Email"
        required
      />
      <label for="InputEmail1" class="form-label">Email</label>
    </div>
    <div class="form-floating">
      <input
        type="password"
        class="form-control"
        id="InputPassword1"
        placeholder="Password"
        required
      />
      <label for="InputPassword1" class="form-label">Password</label>
    </div>
    <button type="submit" class="btn btn-outline-secondary btn-lg mt-3">Sign in</button>
  </form>
</div>